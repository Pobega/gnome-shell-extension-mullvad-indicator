<?xml version="1.0" encoding="UTF-8"?>

<schemalist>
    <schema id="org.gnome.shell.extensions.MullvadIndicator"
        path="/org/gnome/shell/extensions/mullvadindicator/">

        <key type="b" name="show-icon">
            <default>true</default>
            <summary>Show Icon</summary>
            <description>
                    Display indicator icon in system tray
            </description>
        </key>

        <key type="b" name="hide-icon-disconnected">
            <default>false</default>
            <summary>Hide if disconnected</summary>
            <description>
                Hide icon in system tray if not connected to the VPN
            </description>
        </key>

        <key type="b" name="show-menu">
            <default>true</default>
            <summary>Show Menu</summary>
            <description>
                    Show in system dropdown menu
            </description>
        </key>

        <key type="u" name="title-text">
            <default>5</default>
            <summary>Title Text</summary>
            <description>
                    Status information to show as quick settings title text
            </description>
        </key>

        <key type="u" name="subtitle-text">
            <default>1</default>
            <summary>Subtitle Text</summary>
            <description>
                    Status information to show as quick settings subtitle text
            </description>
        </key>

        <key type="i" name="refresh-time">
            <default>600</default>
            <summary>Refresh time</summary>
            <description>
                The amount of seconds to wait without network
                events before doing a timed connection check
            </description>
        </key>

        <key type="b" name="show-server">
            <default>true</default>
            <summary>Show Server</summary>
            <description>
                    Show your currently connected server
            </description>
        </key>

        <key type="b" name="show-country">
            <default>true</default>
            <summary>Show Country</summary>
            <description>
                    Show your currently connected server's country
            </description>
        </key>

        <key type="b" name="show-city">
            <default>true</default>
            <summary>Show City</summary>
            <description>
                Show your currently connected server's city
            </description>
        </key>

        <key type="b" name="show-ip">
            <default>true</default>
            <summary>Show IP</summary>
            <description>
                    Show your current VPN IP address
            </description>
        </key>

        <key type="b" name="show-type">
            <default>true</default>
            <summary>Show VPN Type</summary>
            <description>
                    Show your VPN Protocol (Wireguard, OpenVPN)
            </description>
        </key>

    </schema>
</schemalist>
